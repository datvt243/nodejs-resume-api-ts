{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "checkJs": true, // Kiểm tra lỗi trong các tệp .js.
        "allowJs": true, // Cho phép các tệp .js được nhập vào.
        "rootDir": "./src",
        "esModuleInterop": true,
        "strict": true, // Bật tất cả các kiểm tra nghiêm ngặt.
        "skipLibCheck": true, // Bỏ qua kiểm tra các tệp thư viện.
        "baseUrl": "./", // Đặt thư mục gốc cho các đường dẫn alias
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
