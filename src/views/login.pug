extends ./_layouts/_blank

block vars
  -title        = 'Đăng nhập | Nodojs Resume API'
  -description  = ''
  -keywords     = ''
  -pageID       = 'login'
  -path         = '.'

block container
    .container.pt-4
        .clearfix.mx-auto(style="max-width: 500px")
            +headingPrimary('Đăng nhập')
            form(action="/register" method="POST")
                +fromControl({ field: 'email', label: "Email address", placeholder: 'Vui lòng nhập email' })
                +fromControl({ field: 'password', label: "Password", placeholder: 'Vui lòng nhập mật khẩu' })
                .mb-3.form-check
                    input#remember.form-check-input(type='checkbox')
                    label.form-check-label(for='remember') Remember me
                button.btn.btn-sm.btn-primary(type='submit') Đăng nhập
                        