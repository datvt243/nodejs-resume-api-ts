	-description  = ''
	-keywords     = ''
	-path         = ''

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		//meta(http-equiv="Content-Security-Policy" content="script-src 'self' 'unsafe-eval';")
